<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-control">
    <div class="form-floating mb-3">
      <%= form.text_field :first_name, class:"form-control", id:"floatingInput", placeholder:"First Name" %>
      <%= form.label :first_name, for:"floatingInput"%>
    </div>

    <div class="form-floating mb-3">
      <%= form.text_field :last_name, class:"form-control", id:"floatingInput", placeholder:"Last Name" %>
      <%= form.label :last_name, class:"form-label" %>
    </div>

    <div class="form-floating mb-3">
      <%= form.text_field :email, class:"form-control", id:"floatingInput", placeholder:"email@ukr.com" %>
      <%= form.label :email, class:"form-label" %>
    </div>

    <div class="form-floating mb-3">
      <%= form.text_field :phone, class:"form-control", id:"floatingInput", placeholder:"050 000 00 00" %>
      <%= form.label :phone, class:"form-label" %>
    </div>

    <div class="form-floating mb-3">
      <%= form.text_field :twitter, class:"form-control", id:"floatingInput", placeholder:"Twitter" %>
      <%= form.label :twitter, class:"form-label" %>
    </div>

    <div class="form-floating mb-3">
      <%= form.number_field :user_id, id: :friend_user_id, class:"form-control", id:"floatingInput", value: current_user.id, type: :hidden %>
    </div>

    <div class='action'>
      <%= form.submit class:'btn btn-secondary' %>
    </div>
  </div>
<% end %>
